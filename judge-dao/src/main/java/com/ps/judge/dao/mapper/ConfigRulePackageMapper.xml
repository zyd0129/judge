<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ps.judge.dao.mapper.ConfigRulePackageMapper">
    <resultMap id="resultMap" type="com.ps.judge.dao.entity.ConfigRulePackageDO">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="tenant_code" property="tenantCode" jdbcType="VARCHAR"/>
        <result column="code" property="code" jdbcType="VARCHAR"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="operator_id" property="operatorId" jdbcType="INTEGER"/>
        <result column="gmt_created" property="gmtCreated" jdbcType="TIMESTAMP"/>
        <result column="gmt_modified" property="gmtModified" jdbcType="TIMESTAMP"/>
        <collection property="versions" column="id" ofType="ConfigRulePackageVersionDO"
                    select="com.ps.judge.dao.mapper.ConfigRulePackageVersionMapper.queryByPackageId"/>
    </resultMap>

    <select id="getConfigRulePackageById" resultMap="resultMap">
        select *
        from config_rule_package
        where id = #{id}
    </select>

    <select id="query" parameterType="ConfigRulePackageDO" resultMap="resultMap">
        select *
        from config_rule_package
        <where>
            <if test="tenantCode!=null">
                tenant_code = #{tenantCode}
            </if>
            <if test="name!=null">
                and name=#{name}
            </if>
        </where>
    </select>


    <insert id="insert" parameterType="ConfigRulePackageDO" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        insert into config_rule_package(name, code, tenant_code, gmt_created, gmt_modified)
        values (#{name}, #{code}, #{tenantCode}, #{gmtCreated}, #{gmtModified})
    </insert>

    <update id="update" parameterType="ConfigRulePackageDO">
        update config_rule_package
        <set>
            <if test="name!=null">
                name=#{name},
            </if>
            <if test="gmtModified!=null">
                gmt_modified=#{gmtModified},
            </if>
            <if test="operatorId!=null">
                operator_id=#{operatorId},
            </if>
        </set>
        where id=#{id}
    </update>

</mapper>